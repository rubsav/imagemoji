body {
  #questions-container {
    width: 55%;
    margin: 0 auto;
    margin-top: 2em;
    margin-bottom: 2em;
  }

  .container-category-banner {
    height: 350px;
    width: 100%;
    display: table;
    text-align: center;
    border-radius: 8px;

    background-size: cover;
    background-position: center center;

    .container-category-title {
      font-size: 50px;
      font-weight: 600;
      color: #fff;
      display: table-cell;
      vertical-align: middle;
    }
  }

  .category-banner-title {
    color: #5a5a5a;
    font-size: 15px;
    font-weight: 600;
    text-transform: uppercase;
    margin-bottom: 17px;

    .category-banner-title-breadcrumb-pre {
      color: #aaa;

      &:hover {
        text-decoration: underline;
      }
    }
  }

  .random-questions-container {
    background-color: #e2e2e2;
    min-height: 25px;
    margin: 15px 0px;
    margin-top: 1.5em;
  }

  .random-question {
    background: #fff;
    margin: 0px;
    font-family: 'Open Sans', sans-serif;
  }

  .category-section {
    .most-recent-popular-buttons {
      text-align: center;
      font-size: 18px;

      .most-recent-button, .most-popular-button {
        display: inline-block;
        padding: 10px;

        #most-recent,
        #most-popular {
          color: #aaa;
        }

        a.active {
          font-weight: 600;
          color: #82B7F6 !important;
        }
      }
    }
  }

  .category-questions-header {
    text-align: center;
    color: gray;
    font-weight: 700;
    font-size: 1.7em;
    background-color: #fff;
    padding-bottom: 20px;
  }

  .question-link {
    color: #555;

    &:hover {
      .question-wrapper {
        background-color: #00C39C;

        .question-title,
        .question-info,
        .num-answers {
          color: #fff;
        }

        .question-info {
          color: #555;
        }
      }
    }
  }

  .question-link-answered {
    color: #aaa;

    &:hover {
      .question-wrapper {
        background-color: #ccc;

        .question-title,
        .question-info,
        .answered-when {
          color: #fff;
        }

        .question-info {
          color: #aaa;
        }
      }
    }
  }

  .question-link,
  .question-link-answered {
    text-decoration: none !important;
    font-weight: 600;

    .question-wrapper {
      width: intrinsic;
      width: -moz-max-content;
      max-width: -moz-fit-content;
      border-radius: 10px;
      padding: 10px 20px 10px 10px;

      .question-title {
        font-size: 18px;
        margin: 0;
      }

      .question-info {
        font-weight: 500;
        font-size: 15px;

        div{
          display: inline-block;
          margin-right: 8px;
        }

        .question-answered-date {
          line-height: 11px;
        }
      }
    }
  }

  .question-wrapper{
    padding: 15px 0px;
  }

  .question {
    color: #474747;
    display: inline-block;

    h3 {
      margin: 0px;
      font-size: 19px;
    }
  }

  .group-headline-style {
    padding-bottom: 20px;

    p {
      display: inline-block;
    }
  }

  .categories-wrapper {
    max-width: 900px;
  }

