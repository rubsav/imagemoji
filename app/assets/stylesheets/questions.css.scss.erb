    $dark-gray: #555;
  #question-container{

    .question-label{
      text-align: left;
      color: #4a4a4a;
      padding: 0px;
    }

    .answered-info{
      background-color: #d9edf7;
      margin-bottom: 10px;
      padding: 5px 15px;

      .user-submitted-answer{
        font-weight: 900;
      }
    }

    .compare-stats {
      font-size: 1.5em;
      margin: 2em 3% 0.5em;

      .average {
        height: 2em;
        margin: auto;
        width: 85%;

        p {
          color: #4a4a4a;
        }
      }
    }
  }

  .visualization {
    padding: 1% 3%;
    width: 100%;
    text-align: center;

    .location-select {
      .location-label {
        color: $dark-gray;
        display: inline-block;
        font-size: 23px;
        margin-top: 0.5em;
        margin-bottom: 1em;
        font-weight: 600;
        font-variant: small-caps;

        .location-current {
          color: #50e3c2;
        }
      }

      .location-list {
        display: inline-block;
        float: right;

        ul {
          display: inline;
        }

        li.active > a {
          color: white;
        }
      }
    }

    .c3-tooltip tr td{
      color: $dark-gray;
    }
  }
