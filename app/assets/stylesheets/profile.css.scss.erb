/* Edit Button and input styles */


input[type="file"]{
  color: transparent;
  line-height: 25px;
  font-style: normal !important;
  display: inline;
}

/* Profile Page Styles */

.profile-hero-container {
    width: 100%;
    background: #4a90e2;

  .profile-hero-content {
      text-align: center;

      #profile-picture-container {
        background-color: #ededed;
        height: 9em;
        width: 9em;
        border-radius: 0.5em;
        border: white solid;
        box-shadow: 0 0 0 1pt #d0d0d0;
        display: inline-block;

        .profile-picture-default {
          color: #3e8ae5;
          font-weight: bold;
          font-size: xx-large;
          padding-top: 1em;
        }

        .edit-profile {

          .profile-edit-button {
            width: 100px;
            height: 25px;
            background-color: #e0e0e0;
            border-radius: 3px;
            border: none;
          }

          .profile-edit-button:hover {
            background-color: #d0d0d0;
            box-shadow: 0px 2px 2px rgba(100, 100, 100, 0.5);
          }
        }
      }

      .profile-info {

        .profile-username {
          color: white;
          font-size: 18px;
          font-weight: bold;
        }

        .user-location {
          font-size: 14px;
          color: white;
          position: relative;
          z-index: 2;
        }

        .stat-container {

          #user-leaderboard,
          #user-points {

            .stat-title {
              font-color: white;
              color: white;
              font-size: 18px;
            }

            .stat-number {
              font-size: 18px;
              color: white;
              position: relative;
              z-index: 2;
            }
          }
        }
      }
  }

}



/* Profile edit Page Styles */

.profile-edit-container {
  height: 100%;
  width: 100%;
  position: relative;
  

  .profile-edit {
    height: 8em;
    width: 100%;
    background: #4a90e2;
    position: absolute;

    .profile-content {
      text-align: center;
        h3 {
          margin-top: 2em;
        }
      
      .grey-banner {
        height: 2.5em;
        width: 100%;
        background: #ededed;
        position: relative;
        z-index: 0;
        top: 1.2em;
        margin-bottom: -2em;

        #profile-path-link {
          position: relative;
          z-index: 1;
          color: #4a90e2;
          text-decoration: underline;
          font-weight:bold;
          top: .5em;
        }
      }

      .profile-info-container {
        display: inline-block;

        #profile-picture-container {
          background-color: #ededed;
          height: 9em;
          width: 9em;
          border-radius: 0.5em;
          border: white solid;
          box-shadow: 0 0 0 1pt #d0d0d0;
          position: relative;
          top: 8em;
          right: 7em;

          .profile-picture-default {
            color: #3e8ae5;
            font-weight: bold;
            font-size: xx-large;
            padding-top: 1em;
          }
        }


        .profile-edit-info {
          color: #4a90e2;
          position: relative;
          bottom: 2em;
          left: 6em;
          text-align: left;

          .profile-pic {
            position: relative;
            right: 12em;

         } 

          .input-box {
            height: 33px;
            width: 250px;
            margin-bottom: 5px;
            background-color: #fff;
            border: 1px solid #c2c2c2;
            border-radius: 3px;
            position: relative;
            color: black;
            text-align: left;
            text-indent: 10px;
            
          }

          .small-input-box {
            height: 29px;
            width: 100px;
            margin-bottom: 5px;
            font-size: 12px;
            background-color: #fff;
            border: 1px solid #c2c2c2;
            border-radius: 3px;
            color: black;
            text-align: left;
            text-indent: 10px;

          }

          #profile-city {
            margin: 0;
          }

          #profile-country {
            float: right;

          }

          .profile-birthyear {
            float: right;
          }

          #profile-save{
            float: right;

            .edit-profile-save {
              position: relative;
              display: inline-block;
              height: 29px;
              width: 100px;
              font-size: 12px;
              color: white;
              background-color: #4a90e2;
              border: 1px solid #4a90e2;
              border-radius: 4px;
              bottom: 3em;
            }
          }






        }
      }
    }
  } 

}
