/* Edit Button and Modal Elements styles */
.profile-edit,
.profile-upload::before {
  width: 100px;
  height: 25px;
  background-color: #e0e0e0;
  border-radius: 3px;
  color: #4a4a4a;
  border: none;
  margin: 10px;
  display: inline-block;
  -webkit-user-select: none;
  text-align: center;
  transition: all 150ms linear;
  -webkit-transition: all 150ms linear;
  -ms-transition: all 150ms linear;
  -moz-transition: all 150ms linear;
}

.profile-edit:hover {
  background-color: #d0d0d0;
  box-shadow: 0px 2px 2px rgba(100, 100, 100, 0.5);
}

.profile-upload::-webkit-file-upload-button {
  visibility: hidden;
}

input[type="file"]{
  color: transparent;
  line-height: 25px;
  font-style: normal !important;
  display: inline;
}

/* Profile Page Styles */
.profile-container {
  height: 100%;
  width: 100%;

  .profile-hero-container {
    width: 100%;
    margin: 0 auto;
    background: #639ee3;

    .profile-hero-content {
      text-align: center;

      .user-info-container {
        .user-photo-default {
          font-family: 'Montserrat', 'Open Sans', sans-serif;
          height: 125px;
          width: 125px;
          margin: auto;
          line-height: 125px;
          font-size: 50px;
          background-color: #00c39c;
          font-weight: 400;
          text-align: center;
          border-radius: 50%;
          color: #fff;
          z-index: 1;
        }
      }
    }
  }
}
