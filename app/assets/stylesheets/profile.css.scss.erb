/* Edit Button and Modal Elements styles */
.profile-edit{
  width: 100px;
  height: 25px;
  background-color: #e0e0e0;
  border-radius: 3px;
  color: #4a4a4a;
  border: none;
  margin: 10px;
  display: inline-block;
  float: left;
  -webkit-user-select: none;
  text-align: center;
  transition: all 150ms linear;
  -webkit-transition: all 150ms linear;
  -ms-transition: all 150ms linear;
  -moz-transition: all 150ms linear;
}

.profile-edit:hover {
  background-color: #d0d0d0;
  box-shadow: 0px 2px 2px rgba(100, 100, 100, 0.5);
}

.profile-upload::-webkit-file-upload-button {
  visibility: hidden;
}

input[type="file"]{
  color: transparent;
  line-height: 25px;
  font-style: normal !important;
  display: inline;
}

/* Profile Page Styles */
.profile-container {
  height: 100%;
  width: 100%;

  .profile-hero-container {
    height: 10em;
    width: 100%;
    background: #4a90e2;
    position: absolute;
    z-index: 1;

    .profile-hero-content {
      text-align: center;
      
      #grey-banner {
        height: 2.5em;
        width: 100%;
        background: rgb(237, 237, 237);
        margin: 0 auto;
        z-index: 1;
        position: absolute;
        top: 77%;
      }

      #profile-picture-container {
        background-color: rgb(237, 237, 237);
        height: 9em;
        width: 9em;
        margin: -4em 0 0 17.5em;
        border-radius: 0.5em;
        border: white solid;
        box-shadow: 0 0 0 1pt #d0d0d0;
        position: absolute;
        z-index: 2;

        .profile-picture-default {
          color: #3e8ae5;
          font-weight: bold;
          font-size: xx-large;
          padding-top: 1em;
        }
      }

    /* Style for new profile UI here */
      .edit-profile {
        display: inline-block;
        padding-top: 3em;
      }

      #profile-info {
        font-family: sans-serif;
        .profile-info {
          width: 9em;
          text-align: left;
          margin: 6em 0 0 28em;

          .profile-username {
            color: white;
            font-size: 18px;
            font-weight: bold;
          }

          .user-location {
            font-size: 14px;
            color: #4a90e2;
            position: absolute;
            z-index: 2;
          }
        }

        #profile-stats-container {
          .stat-container {
            text-align: center;

            #user-leaderboard,
            #user-points {

              .stat-title {
                color: white;
                font-size: 18px;
                margin: -2em 0 0 30em;

              }

              .stat-number {
                margin: -1em 0 0 30em;
                font-size: 18px;
                color: #4a90e2;
                position: absolute;
                z-index: 2;
              }
            }
          }
        }
      }
    }
  }
}
