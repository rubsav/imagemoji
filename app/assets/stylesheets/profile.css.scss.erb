/* Profile Page Styles */



.jumbotron {
  background: #419BF9;
  width: 100%;

  .profile-icons:hover{
    border-radius: 15px;
    border-style: solid;
    border-color: white;
  }

  .icon-container {
    display: inline-block;
    max-width: 550px;
    min-width: 330px;
  }

  #profile-picture-container-mobile {
    background-color: #ededed;
    height: 9em;
    width: 9em;
    border-radius: 5em;
    border: white solid;
    box-shadow: 0 0 0 1pt #d0d0d0;
    display: inline-block;
    position: relative;
  }

  #profile-picture-container {
    float: left;
    background-color: #ededed;
    height: 9em;
    width: 9em;
    border-radius: 5em;
    border: white solid;
    box-shadow: 0 0 0 1pt #d0d0d0;
    display: inline-block;
    position: relative;
    margin-left: 10em;
    margin-right: 10em;

    .profile-picture-default {
      color: #3e8ae5;
      font-weight: bold;
      font-size: xx-large;
      padding-top: 1.2em;
      padding-left: 1.5em;
      margin-bottom: 20px;
    }
  }

  .edit-profile-mobile {
    margin-top: 10px;

    .profile-edit-button-mobile {
      width: 100px;
      height: 25px;
      background-color: #419BF9;
      color: white;
      border-color: white;
      border-radius: 10px;
      position: relative;
      margin-top: 1em;
    }

    .profile-edit-button-mobile:hover {
      box-shadow: 0px 2px 2px rgba(100, 100, 100, 0.5);
    }
  }

  //profile edit button
  .edit-profile {
    margin-top: 10px;

    .profile-edit-button {
      width: 100px;
      height: 25px;
      background-color: #419BF9;
      color: white;
      border-color: white;
      border-radius: 10px;
      position: relative;
      margin-top: 1em;
      margin-left: 10.8em;
    }

    .profile-edit-button:hover {
      box-shadow: 0px 2px 2px rgba(100, 100, 100, 0.5);
    }
  }

  .profile-info {
    z-index: 1;
    font-weight:bold;
    position: relative;
    top: 9em;

    .profile-username {
      color: white;
      font-size: 20px;
      vertical-align: top;
      display: inline-block;
    }
  }

  .profile-icons{
    display: inline-block;
    text-align: center;
    width: 150px;
  }

  .profile-title{
    color: white;
    display: inline-block;
  }

  .stat-label {
    color: white;
    font-size: 21px;
    display: inline-block;
  }
}

.profile-hero-container {
    width: 100%;
    height: 20em;
    background: #419BF9;

  .profile-hero-content {
    text-align: center;

    .profile-bottom-container {
      display: inline-block;
      position: relative;
      z-index: 1;
      left: 6em;

      .user-location {
        font-size: 16px;
        color: #4a90e2;
        position: relative;
        z-index: 1;
        vertical-align: top;
        display: inline-block;
        padding-right: 4em;
        padding-left: 1em;
      }
    }
  }
}


/* Profile edit Page Styles */

.profile-edit-container {
  height: 100%;
  width: 100%;
  position: relative;


  .profile-edit {
    height: 8em;
    width: 100%;
    background: #4a90e2;
    position: absolute;

    .profile-content {
      text-align: center;
        h3 {
          margin-top: 2em;
        }

      .grey-banner {
        height: 3em;
        width: 100%;
        background: #ededed;
        position: relative;
        z-index: 0;
        top: 1.2em;
        margin-bottom: -2em;

        #profile-path-link {
          position: relative;
          z-index: 1;
          color: #4a90e2;
          text-decoration: underline;
          font-weight:bold;
          top: .5em;
        }
      }

      .profile-info-container {
        display: inline-block;

        #profile-picture-container {
          background-color: #ededed;
          height: 9em;
          width: 9em;
          border-radius: 0.5em;
          border: white solid;
          box-shadow: 0 0 0 1pt #d0d0d0;
          position: relative;
          top: 8em;
          right: 7em;

          .profile-picture-default {
            color: #3e8ae5;
            font-weight: bold;
            font-size: xx-large;
            padding-top: 1em;
          }
        }


        .profile-edit-info {
          color: #4a90e2;
          position: relative;
          bottom: 2em;
          left: 6em;
          text-align: left;

          .profile-pic {
            position: relative;
            right: 12em;

            input[type="file"] {
              color: transparent;
              line-height: 25px;
              font-style: normal !important;
              display: inline;
            }
         }

          .input-box {
            height: 33px;
            width: 250px;
            margin-bottom: 5px;
            background-color: #fff;
            border: 1px solid #c2c2c2;
            border-radius: 3px;
            position: relative;
            color: black;
            text-align: left;
            text-indent: 10px;

          }

          .small-input-box {
            height: 29px;
            width: 100px;
            margin-bottom: 5px;
            font-size: 12px;
            background-color: #fff;
            border: 1px solid #c2c2c2;
            border-radius: 3px;
            color: black;
            text-align: left;
            text-indent: 10px;

          }

          #profile-city {
            margin: 0;
          }

          #profile-country {
            float: right;

          }

          .profile-birthyear {
            float: right;
          }

          #profile-save{
            float: right;

            .edit-profile-save {
              position: relative;
              display: inline-block;
              height: 29px;
              width: 100px;
              font-size: 12px;
              color: white;
              background-color: #4a90e2;
              border: 1px solid #4a90e2;
              border-radius: 4px;
              bottom: 3em;

              &:hover {
                opacity: 0.8;
              }

            }
          }
        }
      }
    }
  }

}
