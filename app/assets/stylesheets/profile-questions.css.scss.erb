.answered-questions-container {
  text-align: center;

  .profile-questions-answered,
  .profile-questions-asked {
    font-size: 15px;
    text-align: center;
    color: #4A4A4A;
    padding: 20px 0px 0px 20px;
    display: inline-block;
  }

  #questions-answered,
  #questions-asked {
    color: grey;
  }

  .answered-question {
    /* width: 50%;
    margin-left: auto;
    margin-right: auto;
    text-align: left; */

    .profile-question-wrapper {

      padding: 1em;

      img.category-icon {
        display: inline-block;
        vertical-align: top;
        height: 40px;
        padding: 0.5em;
      }

      .profile-question-info {
        display: inline-block;
        padding: 0.5em;
        border-radius: 0.75em;
        text-align: left;

        &:hover {
          background-color: grey;
          color: white;
        }

        .question-info {
          font-weight: 100;
        }
      }
    }
  }
}