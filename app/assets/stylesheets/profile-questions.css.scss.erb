.answered-questions-container {

  .profile-questions-answered,
  .profile-questions-asked {
    font-size: 15px;
    text-align: center;
    color: #4A4A4A;
    padding: 20px 0px 0px 20px;
  }

  #questions-answered {
    color: grey;
  }
  .answered-question {

    .profile-question-wrapper {

      padding: 1em;

      img.category-icon {
        display: inline-block;
        float: left;
        height: 40px;
        padding: 0.5em;
      }

      .profile-question-info {
        display: inline-block;
        padding: 0.5em;
        border-radius: 0.75em;


        &:hover {
          background-color: #E3E2E2;
          color: white;
        }

        .question-info {
          font-weight: 100;
        }
      }
    }
  }
}