.answered-question {

  .profile-question-wrapper {

    padding: 1em;

    img.category-icon {
      display: inline-block;
      float: left;
      height: 40px;
      padding: 0.5em;
    }

    .profile-question-info {
      display: inline-block;
      padding: 0.5em;
      border-radius: 0.75em;

      &:hover {
        background-color: #E3E2E2;
        color: white;
      }
    }
  }
}