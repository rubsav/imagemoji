$(document).ready(function() {
  <% if @user && @unanswered.any? %>
    $("#questions-container").html('<%= escape_javascript(render partial: "categories/show_unanswered_questions") %>');
  <% else %>
    $("#questions-container").html('<%= escape_javascript(render partial: "categories/show_questions") %>');
  <% end %>

  <% if @user && !@answered.empty? %>
    $("#questions-container").append('<%= escape_javascript(render partial: "categories/show_answered_questions") %>');
  <% end %>

  $('#paginator').html('<%= escape_javascript(paginate(@all, :remote => true).to_s) %>');
});