<!-- Welcome section -->
<title>Arima - The Best Source for Knowledge and Data Visualization</title>
<div id="landing">
	<div id="landing-container">
		<div class="logo-name-container">
			<a href="/"><%= image_tag "logo-lg-white.png", id: "logo" %></a>
			<h1 id="welcome">Welcome to Arima</h1>
		</div>

		<div id="summary-container">
			<p class="summary">Arima is a Q&A website for mass opinion. Ask questions, get answers from users all around the world, and see them visualized and compared with the rest of the planet.</p>

			<%= link_to 'Browse Arima', categories_path, class: "enter-button" %>
		</div>
	</div>

	<div id="key-points-container">
		<h3 class="key-points-header">With Arima, you can...</h3>
		<div class="key-points-section">
			<h4 class="key-points-header">Inquire</h4>
			<%= image_tag "inquire.png", class: "key-points-logo" %>
			<p class="key-points-summary">
				Ask questions, gather feedback from users, and collect information you won't find on other websites.
			</p>
		</div>
		<div class="key-points-section">
			<h4 class="key-points-header">Discover</h4>
			<%= image_tag "discover.png", class: "key-points-logo" %>
			<p class="key-points-summary">
        Access real time stats from a large selection of topics answered by people from all over the world.
			</p>
		</div>
		<div class="key-points-section">
			<h4 class="key-points-header">Visualize</h4>
			<%= image_tag "create.png", class: "key-points-logo" %>
			<p class="key-points-summary">
        Create interactive infographics and view customized reports tailored towards you and your questions.
			</p>
		</div>
	</div>
</div>
