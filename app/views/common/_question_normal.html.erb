<div class="question-wrapper">
  <div class="votes">
    <div class="upvote">
      <% if Vote.where(:user_id => @user.id).where(:question_id => question.id).pluck(:vote_type)[0] == "upvote" %>
        <%= link_to image_tag('upvote_blue.png', class: "vote-image"), upvote_question_path(:id => question.id), :method => :put, :remote => true %>
      <% else %>
        <%= link_to image_tag('upvote_grey.png', class: "vote-image"), upvote_question_path(:id => question.id), :method => :put, :remote => true %>
      <% end %>
    </div>
    <div class="counter">
      <%= "#{question.votecount}" %>
    </div>
    <div class="downvote">
      <% if Vote.where(:user_id => @user.id).where(:question_id => question.id).pluck(:vote_type)[0] == "downvote" %>
        <%= link_to image_tag('downvote_orange.png', class: "vote-image"), downvote_question_path(:id => question.id), :method => :put, :remote => true %>
      <% else %>
        <%= link_to image_tag('downvote_grey.png', class: "vote-image"), downvote_question_path(:id => question.id), :method => :put, :remote => true %>
      <% end %>
    </div>
  </div>
  <div class="question-title-container">
    <% if !answered %>
    <a href="<%= question_path(question) %>" title="<%= question.label %>" class="question-link">
    <% else %>
    <a href="<%= question_path(question) %>" title="<%= question.label %>" class="question-link question-link-answered">
    <% end -%>
      <div class="question-info">
        <p class="question-title"><%= question.label %></p>

        <div class="question-dates">
          <% if !answered %>
            <div class="num-answers">
              <%= "#{question.answers.count} #{question.answers.count == 1 ? 'person answered' : 'people answered'}" %>
            </div>
          <% end -%>

          <% if answered %>
            <div class="answered-when">
              <p class="question-answered-date">
                <%= "#{question.answers.count} #{question.answers.count == 1 ? 'person' : 'people'}" %> answered.
                You answered
                  <% num_days = (Date.today - answer.updated_at.to_date).to_i %>
                  <%= num_days >= 1 ? (num_days > 1 ? "#{num_days} days ago" : "#{num_days} day ago") : "today" %>
              </p>
            </div>
          <% end -%>
        </div>
      </div>
    </a>
  </div>
  <div class="clearfix"></div>
</div>
