<section class="modal fade" id="myModal-<%= question.id %>" tabindex="-1" role="dialog" aria-labelledby="editAnswerModal-<%= question.id %>" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header text-center">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="editAnswerModal-<%= question.id %>">Answer</h4>
      </div>
      <div class="answers modal-body">
        <%= render partial: "answers/form", locals: { question: question, answer: question.answers.build(user: current_user), user: current_user } %>
      </div>
    </div>
  </div>
</section>