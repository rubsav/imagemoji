<script>
$(document).ready(function() {

	$('#nolist').click(function(){
		if ($(window).width() <= 1440) {
			$('.image-icon-container').css('width', '650px');
			$('.image-box-wrapper').css('width', '650px');
			$('.image-box-wrapper').css('height', '650px');
			$('.image-link-div').css('height', '650px');
			$('.image-box-wrapper').css("background-size", "1100px");

		}else {
			$('.image-icon-container').css('width', '830px');
			$('.image-box-wrapper').css('width', '830px');
			$('.image-box-wrapper').css('height', '830px');
			$('.image-link-div').css('height', '830px');
			$('.image-box-wrapper').css("background-size", "1100px");
		};
		$('#nolist')[0].style.display = "none";
		$('#list')[0].style.display = "inline-block";
		$('#nogrid')[0].style.display = "inline-block";
		$('#grid')[0].style.display = "none";
	});

	$('#nogrid').click(function(){
		if ($(window).width() <= 1440) {
			$('.image-icon-container').css('width', '400px');
			$('.image-box-wrapper').css('width', '400px');
			$('.image-box-wrapper').css('height', '400px');
			$('.image-link-div').css('height', '400px');
			$('.image-box-wrapper').css("background-size", "650px");

		}else {
			$('.image-icon-container').css('width', '400px');
			$('.image-box-wrapper').css('width', '400px');
			$('.image-box-wrapper').css('height', '400px');
			$('.image-link-div').css('height', '400px');
			$('.image-box-wrapper').css("background-size", "650px");
		};
		$('#nogrid')[0].style.display = "none";
		$('#grid')[0].style.display = "inline-block";
		$('#nolist')[0].style.display = "inline-block";
		$('#list')[0].style.display = "none";
	});

	$('.category-icon').mouseleave(function() {
		$('.sidecat').css("display", "none");
   	});
	$('#home').mouseenter(function() {
		$('.sidecat').css("display", "block");
	    $('.sidecat').text("Home");
   	});
   	$('#category-5').mouseenter(function() {
		$('.sidecat').css("display", "block");
	    $('.sidecat').text("Funny");
   	});
	$('#category-6').mouseenter(function() {
		$('.sidecat').css("display", "block");
	    $('.sidecat').text("Sports");
   	});
   	$('#category-7').mouseenter(function() {
		$('.sidecat').css("display", "block");
	    $('.sidecat').text("Entertainment");
   	});
   	$('#category-8').mouseenter(function() {
		$('.sidecat').css("display", "block");
	    $('.sidecat').text("Travel & Lifestyle");
   	});
   	$('#category-9').mouseenter(function() {
		$('.sidecat').css("display", "block");
	    $('.sidecat').text("Food & Health");
   	});
   	$('#category-10').mouseenter(function() {
		$('.sidecat').css("display", "block");
	    $('.sidecat').text("Current Events");
   	});
   	$('#category-12').mouseenter(function() {
		$('.sidecat').css("display", "block");
	    $('.sidecat').text("Interesting");
   	});
   	$('#category-14').mouseenter(function() {
		$('.sidecat').css("display", "block");
	    $('.sidecat').text("Gaming");
   	});

});

</script>

