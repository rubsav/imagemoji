<div class="sidebar hidden-xs">
	<div class="sidebar-wrapper">
	    <div class="submit-question-container">
	    	<p style="color: #419BF9; font-weight: bold;">Ask Question</p>
	      <%= link_to image_tag("askquestion.png"), new_question_path(:question => true) %>
	    </div>
	    <div class="share-image-container">
	    	<p style="color: #FF7A40; font-weight: bold;">Share image</p>
	      <%= link_to image_tag("shareimage.png"), new_question_path %>
		</div>
	    <div class="profile-link">
			<% if user_signed_in? && current_user.username.present? %>
	        	<%= link_to "#{current_user.username[0].capitalize}", custom_show_path(:username => current_user.username), class: "nav-user-circle" %>
	      <% end %>
	      <%= link_to image_tag("anonprofile.png"), new_registration_path(resource_name), id: "nav-signup-btn" if !user_signed_in? %>
		</div>
	</div>
</div>
