  <script>
    $(document).ready(function() {
      $('#shareNewQuestionModal').modal('show');
    });
  </script>
<% end %>
<% if flash[:share_answer_modal] && !user_signed_in? %>
  <script>
    $(document).ready(function() {
      setTimeout(function() {
        $('#shareSignupModal').modal('show');
      }, 10000);
    });
  </script>
